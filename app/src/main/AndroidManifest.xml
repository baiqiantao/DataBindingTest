<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bqt.databinding">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bqt.databinding.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.BasicActivity"
            android:label="@string/title_activity_basic">
        </activity>
        <activity
            android:name=".sample.CustomBindingActivity"
            android:label="@string/title_activity_custom_binding">
        </activity>
        <activity
            android:name=".sample.IncludeActivity"
            android:label="@string/title_activity_include">
        </activity>
        <activity
            android:name=".sample.CollectionActivity"
            android:label="@string/title_activity_collection">
        </activity>
        <activity
            android:name=".sample.ResourceActivity"
            android:label="@string/title_activity_resource">
        </activity>
        <activity
            android:name=".sample.ObservableActivity"
            android:label="@string/title_activity_observable">
        </activity>
        <activity
            android:name=".sample.ViewWithIDsActivity"
            android:label="@string/title_activity_view_with_ids">
        </activity>
        <activity
            android:name=".sample.ViewStubActivity"
            android:label="@string/title_activity_view_stub">
        </activity>
        <activity
            android:name=".sample.DynamicActivity"
            android:label="@string/title_activity_dynamic">
        </activity>
        <activity
            android:name=".sample.AttributeSettersActivity"
            android:label="@string/title_activity_attribute_setters">
        </activity>
        <activity
            android:name=".sample.ConversionsActivity"
            android:label="@string/title_activity_conversions">
        </activity>
    </application>

</manifest>
